#!/usr/bin/env ruby

require 'daemons'
require 'ohajiki'

if ARGV.size == 4 && ARGV[1] == "--" && (ARGV[2] == "--config" || ARGV[2] == "-c") 
  Ohajiki::Config.load(File.expand_path(ARGV[3]))
end

pid_dir = '/tmp'
Daemons.run_proc('ohajiki', {:dir => pid_dir}) do
  controller = Ohajiki::Service.new
  controller.start
end
